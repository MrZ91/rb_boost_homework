%section.content-header
 %h1.text-center #{course.title} homework

= link_to  new_user_course_lesson_path(course) do
 %button.btn.btn-primary
  Create lesson
= link_to  user_lessons_sorting_path(course), remote: true do
 %button.btn.btn-primary.pull-right
  Change lesson position

- unless course.lessons.count <1
 %table.table.table-striped.table-hover#homework-list
  %thead
   %tr
    %th Performing date
    %th
    %th Title
    %th Status
    %th Advancements pending
  %tbody.rowlink{ data: { link: 'row' } }
   - course.lessons.by_position.each do |lesson|
    = render 'user/courses/lesson', lesson: lesson, course: course

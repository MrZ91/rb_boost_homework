- provide(:title, "#{@course.title} course")
.container-fluid
 %ul#coursetab.nav.nav-tabs
  %li
   %a{"data-toggle" => "tab", :href => "#homework"} Homework
  %li
   %a{"data-toggle" => "tab", :href => "#subscribers"} Subscribers
  %li.active
   %a{"data-toggle" => "tab", :href => "#description"} Description
 .tab-content

  #homework.tab-pane
   = render 'user/courses/homework', course: @course
  #subscribers.tab-pane
   %section.content-header
    %h1.text-center #{@course.title} subscribers
   - unless @subscribers.count <1
    %table.table.table-striped#course-subscribers-list
     %thead
      %tr
       %th Subscriber
       %th Progress
       %th
     %tbody
      - @subscribers.each do |subscriber|
       %tr{ id: "course-subscriber-#{subscriber.id}-column" }
        %td #{subscriber.first_name} #{subscriber.last_name}
        %td Progress-bar
        %td
         = link_to 'Exclude', user_create_course_prohibition_path(subscriber, @course), class: 'btn btn-danger', remote: true, method: :post
  #description.tab-pane.active
   = render 'user/courses/description', course: @course

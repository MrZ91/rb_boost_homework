%section.content-header
 %h1.text-center List of my subscriptions
- @subscriptions.each do |course|
 %br/
 .row
  .col-md-2
   = image_tag(course.image.thumb.url, align: :middle)
  .col-md-10

   .row
    .col-md-4
     %h3= link_to course.title, user_course_path(course)
     = course.description
    .col-md-4
     = link_to 'Visible', '#', class: 'btn btn-success disabled', style:('display: none' unless course.visible)
     = link_to 'Hidden', '#', class: 'btn btn-danger disabled', style:('display: none' unless !course.visible)

   .row
    = link_to 'Edit', edit_user_course_path(course)
    or
    =link_to 'delete', user_course_path(course), method: :delete, data: {confirm: 'Are you sure want to delete this course?!'}
    this course
 %br/
= paginate @subscriptions

%aside.main-sidebar
 %section.sidebar

  = form_tag '#', method: :get, class: 'sidebar-form' do
   .input-group
    %input.form-control{ name: 'q', placeholder:  'Search...', type: 'text' }/
    %span.input-group-btn
     %button#search-btn.btn.btn-flat{ name: 'search', type: 'submit' }
      %i.fa.fa-search

  %ul.sidebar-menu
   %li.header NAVIGATION

   %li{ class: current_page?(root_path) ? 'active' : nil }
    = link_to root_path do
     %i.fa.fa-desktop
     %span Main page

   %li{ class: current_page?(courses_path) ? 'active' : nil }
    = link_to courses_path do
     %i.fa.fa-th
     %span Courses

   - if user_signed_in?
    %li{ class: current_page?(user_path(current_user)) ? 'active' : nil }
     = link_to user_path(current_user) do
      %i.fa.fa-user
      %span My profile

    %li{ class: current_page?(user_courses_path) ? 'active' : nil }
     = link_to user_courses_path do
      %i.fa.fa-tasks
      %span My cabinet

    %li{ class: current_page?(user_subscription_path) ? 'active' : nil }
     = link_to user_subscription_path do
      %i.fa.fa-check-square-o
      %span My subscriptions

    %li{ class: current_page?(user_my_advancements_path) ? 'active' : nil }
     = link_to user_my_advancements_path do
      %i.fa.fa-file-text-o
      %span My advancements

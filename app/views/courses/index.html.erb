<% provide(:title, 'courses') %>
<% @courses_list.each do |course| %>
    <h3><%= course.title %>.</h3>
    <%= course.description %><br />
    <%= link_to 'Edit', edit_course_path(course)%>
    or
    <%= link_to 'delete', course_path(course), method: :delete,
                data: {confirm: 'Are you sure want to delete this course?!'} %>
    this course <br />
    <%end%>
<%= paginate @courses_list %>